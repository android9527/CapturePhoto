    /**
     * 压缩图片
     * 
     * @throws Exception
     */
    private void compressBitmap() throws Exception
    {
        int trans = spUtil.getInt(TRANS, DEFAULT_TRANS_POSITION);
        int i = 0;
        for (ImageInfo imageInfo : copyFileList(imageInfos))
        {
            if (trans == 0) // 直接上传
            {
                
            }
            else
            {
                /**
                 * 压缩上传
                 */
                int width = spUtil.getInt(Constant.PICTURE_WIDTH,
                        mDensityUtil.getScreenWidth());
                int height = spUtil.getInt(Constant.PICTURE_HEIGHT,
                        mDensityUtil.getScreenHeight());
                Bitmap bitmap = BitmapTools.getBitmapBySampleSize(MainActivity.this,
                        imageInfo.fullName,
                        width * height / 4);
                
                if (bitmap != null)
                {
                    Log.e(TAG,
                            "================== bitmap width = "
                                    + bitmap.getWidth() + "  height = "
                                    + bitmap.getHeight());
                    Log.e(TAG, "imageInfo.fullName = " + imageInfo.fullName);
                    BitmapTools.saveMyBitmap(imageInfo.fullName, bitmap);
                    bitmap.recycle();
                    bitmap = null;
                }
            }
            i++;
            upload(imageInfo, i);
        }
    }
    
    private final class UploadProgressAsyncTask extends ProgressAsyncTask
    {
        
        public UploadProgressAsyncTask(Context context, boolean isShow)
        {
            super(context, isShow);
        }
        
        @Override
        protected void onPreExecute()
        {
            // 显示进度条
            showProgressDialog(MainActivity.this, imageInfos.size());
            super.onPreExecute();
        }
        
        @Override
        protected void onPostExecute(Object obj)
        {
            super.onPostExecute(obj);
            dismissProgressDialog();
            imageAdapter.notifyDataSetChanged();
        }
        
        @Override
        protected Object doInBackground(Object... params)
        {
            
            // 添加至数据库
            MySQLiteOpenHelper sqLiteOpenHelper = new MySQLiteOpenHelper(
                    MainActivity.this);
            MySQLiteOpenHelper.insert(sqLiteOpenHelper, imageInfos);
            
            try
            {
                compressBitmap();
            }
            catch (Exception e)
            {
                e.printStackTrace();
            }
            return super.doInBackground(params);
        }
        
        public void updateProgress(int value)
        {
            publishProgress(value + "");
        }
        
        @Override
        protected void onProgressUpdate(String... values)
        {
            MainActivity.this.updateProgress(Integer.parseInt(values[0]));
            super.onProgressUpdate(values);
        }
        
        @Override
        protected void onCancelled()
        {
            Log.e(TAG, "AsyncTask onCancelled()");
            super.onCancelled();
        }
    }
    
    private AlertDialog uploadDialog;
    
    private ProgressBar progressBar;
    
    private TextView tvDownLoadProgress;
    
    private int length;
    
    /**
     * 显示进度条对话框
     * 
     * @param mContext
     * @param max
     */
    private void showProgressDialog(final Context mContext, final int max)
    {
        if (uploadDialog != null)
        {
            uploadDialog.show();
            return;
        }
        AlertDialog.Builder builder = new AlertDialog.Builder(mContext).setIcon(android.R.drawable.ic_dialog_info);
        builder.setTitle(R.string.dialog_title);
        View view = LayoutInflater.from(mContext)
                .inflate(R.layout.upload_dialog_progress, null);
        
        tvDownLoadProgress = (TextView) view.findViewById(R.id.text_progress);
        progressBar = (ProgressBar) view.findViewById(R.id.progressBar);
        length = max;
        progressBar.setMax(length);
        builder.setView(view);
        
        builder.setNegativeButton(R.string.button_cancel,
                new DialogInterface.OnClickListener()
                {
                    
                    @Override
                    public void onClick(DialogInterface dialog, int which)
                    {
                        Log.e(TAG, "AlertDialog.Builder builder onClick");
                        if (dialog != null)
                        {
                            dialog.dismiss();
                        }
                    }
                });
        
        builder.setOnCancelListener(new DialogInterface.OnCancelListener()
        {
            
            @Override
            public void onCancel(DialogInterface dialog)
            {
                Log.e(TAG, "AlertDialog.Builder builder onCancel");
            }
        });
        uploadDialog = builder.create();
        uploadDialog.show();
    }
    
    private void updateProgress(int progress)
    {
        tvDownLoadProgress.setText(progress + "/" + length);
        progressBar.setProgress(progress);
    }
    
    /**
     * 隐藏对话框
     */
    private void dismissProgressDialog()
    {
        if (uploadDialog != null)
        {
            uploadDialog.dismiss();
        }
    }
    
    private void upload(ImageInfo imageInfo, int value) throws Exception
    {
        //      Util.uploadFile(spUtil.getString(URL, getString(R.string.default_url)), imageInfo.fullName, null);
        Util.uploadFile("http://192.168.1.106:8085/form/receive_file.php",
                imageInfo.fullName,
                null);
        FileOperationHelper.deleteFile(imageInfo);
        imageInfos.remove(imageInfo);
        uploadProgressAsyncTask.updateProgress(value);
    }
    
    private ArrayList<ImageInfo> copyFileList(ArrayList<ImageInfo> files)
    {
        ArrayList<ImageInfo> imageInfos = new ArrayList<ImageInfo>();
        for (ImageInfo f : files)
        {
            imageInfos.add(f);
        }
        return imageInfos;
    }
    
